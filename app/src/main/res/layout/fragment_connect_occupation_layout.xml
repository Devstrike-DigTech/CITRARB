<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/iv_search_all_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_mini"
        app:queryHint="@string/search_all_connects"
        android:contentDescription="@string/search_all_members"
        android:padding="@dimen/padding_mini"
        app:srcCompat="@drawable/ic_search" />

    <ImageView
        android:id="@+id/iv_sort_all_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/padding_mini"
        android:contentDescription="@string/sort_all_members"
        android:padding="@dimen/padding_mini"
        app:srcCompat="@drawable/ic_sort" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_sort_all_connect"
        android:layout_margin="@dimen/padding_mini"
        android:padding="@dimen/padding_mini"
        app:cardElevation="@dimen/padding_mini">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_all_connect"
            tools:itemCount="3"
            tools:listitem="@layout/item_connect_occupation_layout"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_mini"
            android:clipToPadding="false"
            android:padding="@dimen/padding_mini"
            android:visibility="gone" />

        <!--below is the view for our shimmer-->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/connect_shimmer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:animationCache="true"
            app:shimmer_repeat_mode="restart"
            app:shimmer_shape="radial">

            <!--For shimmer we are creating a same
                layout but setting its background
                as a gray colour and not providing
                any view inside it-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--below we are displaying multiple
                    shimmer layouts using include
                    to show them in list format-->
                <include layout="@layout/item_connect_shimmer_layout" />
                <include layout="@layout/item_connect_shimmer_layout" />
                <include layout="@layout/item_connect_shimmer_layout" />
                <include layout="@layout/item_connect_shimmer_layout" />
                <include layout="@layout/item_connect_shimmer_layout" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>


    </com.google.android.material.card.MaterialCardView>


    <ProgressBar
        android:id="@+id/send_request_ProgressBar"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>