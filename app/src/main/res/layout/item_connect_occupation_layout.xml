<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="occupationItem"
            type="org.devstrike.app.citrarb.features.connect.data.models.response.Connect" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_mini"
        android:padding="@dimen/padding_mini"
        app:cardElevation="@dimen/padding_mini">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_mini">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_occupation_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/padding_mini"
                android:padding="@dimen/padding_mini"
                app:civ_border_width="0.5dp"
                tools:src="@drawable/devstrike_logo" />

            <TextView
                android:id="@+id/txt_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_mini"
                android:layout_toEndOf="@id/iv_occupation_photo"
                android:padding="@dimen/padding_mini"
                android:text="@{occupationItem.name}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_l"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/txt_member_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_member_name"
                android:layout_marginStart="@dimen/padding_mini"
                android:layout_toEndOf="@id/iv_occupation_photo"
                android:padding="@dimen/padding_mini"
                android:text="@{occupationItem.jobTitle}"
                tools:text="Nail Tech" />

            <TextView
                android:id="@+id/txt_member_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_member_occupation"
                android:layout_marginStart="@dimen/padding_mini"
                android:layout_toEndOf="@id/iv_occupation_photo"
                android:padding="@dimen/padding_mini"
                android:text="@{occupationItem.category}"
                tools:text="5 Years xp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_member_gender"
                android:layout_margin="@dimen/padding_mini"
                android:orientation="horizontal"
                android:padding="@dimen/padding_mini"
                android:weightSum="3">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_message_connect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/padding_mini"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_mini"
                    app:cardBackgroundColor="@color/custom_secondary">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:contentDescription="@string/message_connect_text"
                        android:padding="@dimen/padding_mini"
                        app:srcCompat="@drawable/ic_whatsapp" />

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_call_connect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/padding_mini"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_mini"
                    app:cardBackgroundColor="@color/custom_secondary">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:contentDescription="@string/call_connect_text"
                        android:padding="@dimen/padding_mini"
                        app:srcCompat="@drawable/ic_phone_connect" />

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_share_connect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/padding_mini"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_mini"
                    app:cardBackgroundColor="@color/custom_secondary">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:contentDescription="@string/share_connect_text"
                        android:padding="@dimen/padding_mini"
                        app:srcCompat="@drawable/ic_share" />

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>
