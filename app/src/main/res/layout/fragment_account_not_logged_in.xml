<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.account.ui.AccountNotLoggedIn">

    <ImageView
        android:id="@+id/iv_not_logged_in"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_maxi"
        android:padding="@dimen/padding_mini"
        app:srcCompat="@drawable/ic_no_user" />

    <TextView
        android:id="@+id/account_not_logged_in_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_not_logged_in"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_midi"
        android:text="@string/account_not_logged_in_title"
        android:textSize="@dimen/text_l"
        android:textStyle="bold" />

    <Button
        android:id="@+id/account_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_not_logged_in_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_midi"
        android:backgroundTint="@color/custom_secondary"
        android:padding="@dimen/padding_mini"
        android:text="@string/account_btn_login" />

    <TextView
        android:id="@+id/account_not_logged_in_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_mini"
        android:padding="@dimen/padding_mini"
        android:text="@string/account_not_logged_in_create_account"
        android:textColor="@color/custom_secondary"
        android:textSize="@dimen/text_l" />

</RelativeLayout>
