<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CITRARB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_primary</item>
        <item name="colorPrimaryVariant">@color/custom_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_secondary</item>
        <item name="colorSecondaryVariant">@color/custom_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">@color/transp?attr/colorPrimaryVariant</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <!-- Default text fonts. -->
        <item name="android:textViewStyle">@style/BalsamiqTextViewStyle</item>
        <item name="buttonStyle">@style/BalsamiqButtonStyle</item>

<!--        <item name="android:buttonStyleNews">@style/NewsStyle</item>-->
    </style>

    <style name="BalsamiqTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/balsamiq_sans_regular</item>
    </style>

    <style name="BalsamiqButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/balsamiq_sans_bold</item>
    </style>

    <style name="NewsStyle" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:background">@color/custom_secondary</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CustomAlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>
</resources>